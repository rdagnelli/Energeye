<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rdagnelli.energeye.activities.FirstTimeActivity">

    <TextView
        android:id="@+id/textView1_ft"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:padding="16dp"
        android:layout_height="160dp"
        android:text="Configurazione \iniziale"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:background="@color/colorPrimary" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout_ft"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="0dp"
        android:layout_below="@id/textView1_ft"
        android:gravity="center"
        android:background="@color/white"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

        <EditText
            android:id="@+id/device_id_ft"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:hint="Codice dispositivo"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textSize="16sp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/fare_ft"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:background="@color/colorPrimary"
        android:hint="@string/select_your_fare"
        android:layout_below="@id/textInputLayout_ft"/>

    <Button
        android:id="@+id/button_ft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:text="Conferma"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
